---
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.11.3/font/bootstrap-icons.min.css" rel="stylesheet"/>
		<title>Daniel Alejandro Web Dev</title>
	</head>
	<body>
		<Header/>
		<div class="content-container">
			<div class="content">
				<slot />
			</div>
		</div>
		<Footer/>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}

	body {
		background-color: var(--color-primary);
	}

	.content-container {
		margin: 5vh 0;
		width: 100%;
		display: flex;
		justify-content: center;
	}

	.content {
		width: var(--content-normal-screen-width);
	}

	@media (max-width: 1200px) {
		.content {
			width: var(--content-smaller-screen-width);
		}
	}
	
</style>

<style is:global>
	:root {

		/* COLORES BASE */
  		--color-primary: #2E5266;
		--color-primary-rgba: #2039466f;
  		--color-secondary: #6E8898;
		--color-3: #9FB1BC;
		--color-4: #D3D0CB;
		--color-5: #CB8589;

		/* SCREEN BREAKPOINTS */
		--xxl-screen: 1400px;
		--xl-screen: 1200px;
		--lg-screen: 992px;
		--md-screen: 768px;
		--sm-screen: 576px;

		/* SCREEN BREAKPOINTS */
		--content-normal-screen-width: 60%;
		--content-smaller-screen-width: 80%;

		--header-normal-creen-widht: var(--content-normal-screen-width);
		--header-smaller-creen-widht: 100%;
	}

	/* FUENTE CUSTOM */
	@font-face {
  		font-family: 'Inconsolata Variable';
  		font-style: normal;
  		font-display: swap;
  		font-weight: 200 900;
  		src: url(https://cdn.jsdelivr.net/fontsource/fonts/inconsolata:vf@latest/latin-wght-normal.woff2) format('woff2-variations');
  		unicode-range: U+0000-00FF,U+0131,U+0152-0153,U+02BB-02BC,U+02C6,U+02DA,U+02DC,U+0304,U+0308,U+0329,U+2000-206F,U+20AC,U+2122,U+2191,U+2193,U+2212,U+2215,U+FEFF,U+FFFD;
	}

	* {
    	font-family: 'Inconsolata Variable';
  	}
</style>
