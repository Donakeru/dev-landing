<style>
    .footer {
        color: #fff;
        background-color: #203946;
        width: 100%;
        display: flex;
        justify-content: center;
    }

    .footer_content {
        margin: 2em 0 3em 0;
        width: 100%;
        display: flex;
        justify-content: center;
    }

    .contact {
        width: 50%;
        display: flex;
        justify-content: start;
        align-items: center;
        flex-direction: column;
    }

    .social_wrapper {
        margin-bottom: 1em;
    }

    .social {
        padding: 0 .5em;
